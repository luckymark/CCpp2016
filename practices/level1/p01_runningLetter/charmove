#include <algorithm>
#include <iostream>
#include <cstdio>
#include <cstring>
#include <vector>
using namespace std;
const int len = 80;
void move (int l,int r,int a)
{
   int i,j;
   for (i = l;i != r;i += a)
   {
   	 for (j = 1;j <= i; j++) printf(" ");
   	 printf("A");
   	 system("cls");
   }
}
int main()
{
  while (1)
  {
     move(0,len,1);
     move(len,0,-1);
  }
}
